@model IEnumerable<CapModel.JobPosting>

@{
    ViewBag.Title = "JobPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>JobPosts</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
