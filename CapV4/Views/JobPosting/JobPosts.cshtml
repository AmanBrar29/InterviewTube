            @Html.DisplayFor(modelItem => item.JobType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostEndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumPositions)
        </td>
