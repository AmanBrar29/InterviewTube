        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobSubcategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.CompName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recruiter.Department)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
