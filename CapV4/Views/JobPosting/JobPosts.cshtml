        <td>
            @Html.DisplayFor(modelItem => item.JobCompensation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobVisible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobSubcategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.CompName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Recruiter.Department)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.JobPostId }) |
            @Html.ActionLink("Edit Location", "Edit", "Locations", new { id = item.JobPostId }, null) |
            @Html.ActionLink("Details", "Details", new { id=item.JobPostId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.JobPostId })
        </td>
    </tr>
}

</table>
